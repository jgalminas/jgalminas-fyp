{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/constants.ts",
    "src/env.ts",
    "src/shared/*",
  ],
  "compilerOptions": {
    "types": [
      "vite-plugin-svgr/client",
      "vitest/globals"
    ],
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "out/preload",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*",
      ],
      "@root/*": [
        "src/*",
      ],
      "@assets/*": [
        "src/renderer/src/assets/*"
      ]
    }
  }
}
